## Columns
# community_id
# community_name (ignore)
# place_type_id (ignore)
# place_type_name 

# Note that Institutions are not places, but are included here because the relational database and thus the export combines them with places.

# Run:
# tarql -e utf-8 places_with_types.tq place-with-types-7-19-24.csv > tolPlacesWithTypes.ttl

CONSTRUCT {

    ?place_iri
        a ?class_iri ;
        gist:isCategorizedBy ?type_iri ;
    .

}

WHERE {

    # Testing
    # FILTER(?community_id in (9, 45))

    # Get the entity's IRI
    # All IRIs will use infix "Place" because the type data is not available in other exports
    # that reference the place (e.g., founders, founding dates, descriptions, etc.).
    BIND(tarql:expandPrefixedName(CONCAT("told:_Place_", ?community_id)) AS ?place_iri)

    # Get the local name of the entity's class
    BIND(
        COALESCE(
            # Nunnery has class Monastery but type nunnery, in order to both group with and
            # distinguish from monasteries.
            IF(?place_type_name IN ("Monastery", "Nunnery"), "Monastery", ?unbound),

            IF(?place_type_name = "Monastic College", "Institution", ?unbound),

            IF(?place_type_name IN ("Cave", 
                                    "Hidden Land",
                                    "Lake", 
                                    "Mountain",
                                    "Stupa"), 
                "Landmark", ?unbound),

            # Dharma Center, Government Building, Hermitage, Hospital, Manor, Palace, School, Temple
            "Building"
    ) AS ?class_local_name)

    # Get the entity's class IRI - gist:Building, gist:Landmark, tolo:Institution, 
    # or tolo:Monastery
    BIND(IF(?class_local_name IN ("Building", "Landmark"), 
        tarql:expandPrefixedName(CONCAT("gist:", ?class_local_name)),
        tarql:expandPrefixedName(CONCAT("tolo:", ?class_local_name))
    ) AS ?class_iri)

    # Get the entity's category - e.g., tolx:_PlaceFunction_manor
    # Get the category class name used in the infix  
    BIND(LCASE(REPLACE(?place_type_name, " ", "_")) AS ?type)
    BIND(
        COALESCE(
            IF(?type IN ("monastery", "monastic_college", "nunnery"), "InstitutionType", ?unbound),
            IF(?type IN ("cave", "hidden_land", "lake", "mountain"), "PlaceType", ?unbound),
            # dharma_center, government_building, hermitage, hospital, manor, palace, school, 
            # stupa, temple
            "PlaceFunction"
        ) AS ?category_class
    )
    BIND(tarql:expandPrefixedName(CONCAT("tolx:_", ?category_class, "_", ?type)) AS ?type_iri)

}
