## Columns
# tol_id
# tbrc_id
# primary_name
# prefered_wylie [sic]
# name_variant
# lang_tag

# Run: 
# tarql --dedup 50000 person_name_variants.tq person-name-variants-01-15-24.csv > tolPersonNameVariants.ttl


CONSTRUCT {
    #?person_iri tolo:alternateName ?alternate_name ;
    ?person_iri tolo:alternateName ?alternate_name ;
    .
} 

WHERE {

    # Testing
    #  FILTER(?ROWNUM IN (1, 2))

    BIND(tarql:expandPrefixedName(CONCAT("told:_Person_", ?tol_id)) AS ?person_iri)
    BIND(IF(?name_variant != ?primary_name && ?name_variant != ?prefered_wylie, STRLANG(?name_variant, ?lang_tag), ?unbound) AS ?alternate_name)

}
